<div class="container-fluid d-lg-flex w-100">

  <div class="col-lg-4 col-sm-10 col-10 ml-5 mt-4 border mb-5">
   <h4 class="col-lg-7 col-sm-10 bg-light mt-5 mb-5 mx-auto text-center"><%= @user.name%>さんのプロフィール</h4>
   <div class="row mb-4">
     <div class="col-lg-3 col-sm-3">投稿</div>
     <div class="col-lg-9 col-sm-3"><%= @posts.count %> 冊</div>
   </div>
   <!--<div class="row mb-4">-->
   <!--  <div class="col-lg-3 col-sm-3">コメント</div>-->
   <!--  <div class="col-lg-9 col-sm-3">%= @.count %> 冊</div>-->
   <!--</div>-->
   <div class="row">
     <% if @user == current_user %>
     <%= link_to "編集する", edit_path(@user.id), :class => "btn btn-success col-lg-3 col-sm-4 mx-auto ml-5 mt-4 mb-5" %>
     <% end %>
   </div>
  </div>

  <div class="col-lg-7 col-sm-10 col-12 mt-5 mb-4 ml-4">
    <div class="row d-flex justify-content-between mb-3">
     <h2 class="col-lg-3 col-sm-5 ml-3">投稿</h2>
    <!-- <div class="col-lg-3 col-sm-5">% if @user == current_user %>%= link_to "新規投稿",new_post_path, :class => "btn btn-primary" %>% end %></div>-->
    <!--</div>-->
    <table class="table w-100">
     <thead>
      <tr class="table-secondary text-algin-left">
        <th style="width: 25%">タイトル</th>
        <th style="width: 30%">内容</th>
        <th style="width: 25%">投稿日</th>
      </tr>
     </thead>
     <tbody>
      <% @posts.each do |posts| %>
      <tr>
      <td><%= link_to posts_path(posts.id) do %><%= posts.title %><% end %></td>
      <td><%= posts.body %></td>
      <td><%= posts.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
     </tbody>
     <% end %>
    </table>
  </div>
</div>